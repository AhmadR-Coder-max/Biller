<% @page_title = "Customers \u{1f60e}" %>

<h2 style="margin: 25px; text-align: center;"> Customers</h2>

<table class="table table-secondary table-striped container shadow-sm p-3 mb-5">
  <thead class="thead-dark">
      <tr>
        <th> ID </th>
        <th> Orders </th>
        <th> Name </th>
        <th> Address 1 </th>
        <th> Address 2 </th>
        <th> Phone 1 </th>
        <th> Phone 2 </th>
        <th colspan="3"> Actions </th>
      </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td> <%= customer.id %> </td>
      <td> <%= customer.orders.ids %> </td>
      <td> <%= customer.name %> </td>
      <td> <%= customer.address_1 %> </td>
      <td> <%= customer.address_2 %> </td>
      <td> <%= customer.phone_1 %> </td>
      <td> <%= customer.phone_2 %> </td>
      <td id="links">
        <%= link_to('Show', {action: :show, id: customer.id}, class: 'btn btn-outline-primary btn-sm') %>
        <%= link_to('Edit', {action: :edit, id: customer.id}, class: 'btn btn-outline-primary btn-sm') %>
        <%= link_to('Destroy', {action: :destroy, id: customer.id}, method: :destroy, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary btn-sm') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to("New Customer", {action: :new}, class: "btn btn-secondary btn-lg btn-block mt-5 container") %>